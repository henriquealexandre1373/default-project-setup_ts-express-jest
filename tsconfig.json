{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "rootDir": "src",
    "outDir": "./dist",
    "moduleResolution": "node",
    "removeComments": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "paths": {
      "@/*": ["*"],
      "@Controllers/*": ["./app/controllers/*"],
      "@Repositories/*": ["./app/repositories/*"]
    },
    "baseUrl": "src"
  }
}
